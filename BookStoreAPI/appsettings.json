{
  "ConnectionStrings": {
    "BookStoreConnection": "Data Source=localhost;Initial Catalog=BookStoreDatabase;Integrated Security=True;Pooling=False"
  },

  "Serilog": {
    "MinimalLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  },
  "JwtSettings": {
    "Issuer": "BookStoreAPI",
    "Audience": "BookstoreApiClient",
    "Duration": 1
  },
  "AllowedHosts": "*"
}